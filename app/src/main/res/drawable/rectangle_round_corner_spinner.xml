<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/dark_cream" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="3dp" android:start="3dp" android:end="3dp" android:top="3dp" />
                </shape>
            </item>

            <item android:end="5dp">
                <bitmap android:gravity="center_vertical|end" android:src="@mipmap/ic_arrow_down" />
            </item>
        </layer-list>
    </item>

</selector>