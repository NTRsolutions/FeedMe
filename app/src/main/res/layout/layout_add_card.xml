<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/first_name_et"
                        style="@style/EditTextGreySingleLine"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="center_vertical"
                        android:hint="@string/first_name"
                        android:maxLength="15"
                        android:padding="10dp"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".5"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/last_name_et"
                        style="@style/EditTextGreySingleLine"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="center_vertical"
                        android:hint="@string/last_name"
                        android:maxLength="15"
                        android:padding="10dp"
                        android:textSize="15dp"/>


                </LinearLayout>
            </LinearLayout>

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/card_number_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:digits="1234567890"
                android:gravity="center_vertical"
                android:hint="@string/card_number"
                android:inputType="number"
                android:maxLength="16"
                android:padding="10dp"
                style="@style/EditTextGreySingleLine"
                android:textSize="15dp"/>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <EditText
                            android:id="@+id/month_et"
                            style="@style/EditTextGreySingleLine"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:hint="@string/MM"
                            android:inputType="none"
                            android:maxLength="2"
                            android:padding="10dp"
                            android:textSize="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/year_et"
                        style="@style/EditTextGreySingleLine"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:hint="@string/YY"
                        android:inputType="none"
                        android:maxLength="4"
                        android:padding="10dp"
                        android:textSize="15dp"/>

                </LinearLayout>
            </LinearLayout>


                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/cvv_et"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:digits="1234567890"
                    android:gravity="center_vertical"
                    android:hint="@string/CVV"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="10dp"
                    android:textSize="15dp"
                    style="@style/EditTextGreySingleLine" />

            <CheckedTextView
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:id="@+id/term_and_condition_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                android:drawablePadding="@dimen/recyclerview_cuisine_type_working_days_ctv_drawable_padding"
                android:ellipsize="end"
                android:text="By adding your debit / credit card, you agree to the Terms &amp; Condition. "/>

            <com.os.foodie.ui.custom.RippleAppCompatButton
                android:id="@+id/add_bt"
                style="@style/ButtonOrange"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="@string/add"
                android:gravity="center"
                android:textAllCaps="false" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
