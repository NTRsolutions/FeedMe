<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.os.foodie.ui.search.RestaurantSearchActivity">

    <TextView
        android:id="@+id/activity_customer_search_tv_no_result"
        style="@style/TextView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/customer_search_tv_no_result_margin_top"
        android:gravity="center"
        android:text="@string/customer_search_tv_no_result_text"
        android:visibility="gone"
        android:textColor="@color/orange" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_customer_search_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>