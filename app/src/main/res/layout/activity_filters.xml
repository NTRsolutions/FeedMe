                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/filters_ll_offer_checkbox_margin"
                android:orientation="horizontal">

                <CheckedTextView
                    android:id="@+id/activity_filters_ctv_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                    android:gravity="center"
                    android:text="@string/filters_ctv_offer_text" />

            </LinearLayout>

        </LinearLayout>

        <com.os.foodie.ui.custom.RippleAppCompatButton
            android:id="@+id/activity_filters_bt_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="@dimen/filters_bt_search_padding"
            android:text="@string/filters_bt_search_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/filters_bt_search_text_size"
            android:typeface="serif" />

    </LinearLayout>

