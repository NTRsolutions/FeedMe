            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_bottom_line_light_grey"
            android:orientation="vertical"
            android:padding="@dimen/filters_ll_open_now_padding">

            <TextView
                style="@style/TextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/filters_tv_open_now_margin"
                android:text="@string/filters_tv_open_now_text"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/filters_ll_open_now_checkbox_margin"
                android:orientation="horizontal">

                <CheckedTextView
                    android:id="@+id/activity_filters_ctv_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                    android:gravity="center"
                    android:text="@string/filters_ctv_open_text" />

                <CheckedTextView
                    android:id="@+id/activity_filters_ctv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/filters_ctv_close_margin_start"
                    android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                    android:gravity="center"
                    android:text="@string/filters_ctv_close_text" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_bottom_line_light_grey"
            android:orientation="vertical"
            android:padding="@dimen/filters_ll_delivery_type_padding">

            <TextView
                style="@style/TextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/filters_tv_delivery_type_margin"
                android:text="@string/filters_tv_delivery_type_text"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/filters_ll_delivery_type_checkbox_margin"
                android:orientation="horizontal">

                <CheckedTextView
                    android:id="@+id/activity_filters_ctv_deliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                    android:gravity="center"
                    android:text="@string/filters_ctv_deliver_text" />

