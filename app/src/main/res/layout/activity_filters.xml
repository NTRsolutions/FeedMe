                    android:id="@+id/activity_filters_ctv_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/filters_ctv_pickup_margin_start"
                    android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                    android:gravity="center"
                    android:text="@string/filters_ctv_pickup_text" />

            </LinearLayout>

