<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/profile_default"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="@string/restaurant_name"
                android:textColor="@color/orange" />

            <EditText
                android:id="@+id/restaurant_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:paddingTop="2dp"
                android:text="@string/restaurant_name"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="@string/restaurant_sign_up_et_contact_person_name_hint"
                android:textColor="@color/orange" />

            <EditText
                android:id="@+id/zip_code_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="-0123456789"
                android:enabled="false"
                android:maxLength="20"
                android:paddingTop="2dp"
                android:text="@string/restaurant_sign_up_et_contact_person_name_hint"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="@string/email"
                android:textColor="@color/orange" />

            <EditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:paddingTop="2dp"
                android:text="@string/email"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="@string/phone_number"
                android:textColor="@color/orange" />

            <EditText
                android:id="@+id/phone_num_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="number"
                android:maxLength="10"
                android:paddingTop="2dp"
                android:text="@string/phone_number"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>


        <com.os.foodie.ui.custom.RippleAppCompatButton
            android:id="@+id/activity_customer_save_profile"
            style="@style/ButtonOrange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customer_sign_up_bt_sign_up_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/customer_sign_up_bt_sign_up_margin_top"
            android:gravity="center"
            android:text="@string/save" />

    </LinearLayout>
</LinearLayout>