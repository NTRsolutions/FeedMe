<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:orientation="horizontal"
    android:padding="@dimen/restaurant_order_ll_padding">

    <!--android:layout_marginEnd="15dp"-->
    <!--android:layout_marginStart="15dp"-->
    <!--android:layout_marginTop="15dp"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recyclerview_restaurant_order_tv_order_id"
            style="@style/TextView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<TextView-->
            <!--android:id="@+id/recyclerview_restaurant_order_tv_item_name"-->
            <!--style="@style/TextView1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/restaurant_order_tv_item_name_margin_top"-->
            <!--android:textColor="@color/dark_grey2" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/restaurant_order_ll_delivery_time_margin_top"
            android:orientation="horizontal">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:ellipsize="end"-->
                <!--android:maxLines="2"-->
                <!--android:text="@string/recyclerview_restaurant_order_tv_delivery_time_tag_text"-->
                <!--android:textColor="@color/dark_grey"-->
                <!--android:textSize="@dimen/restaurant_order_tv_delivery_type_tag_text_size"-->
                <!--android:typeface="serif" />-->

            <TextView
                android:id="@+id/recyclerview_restaurant_order_tv_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/restaurant_order_delivery_type_text_size"
                fontPath="@string/font_serif"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/restaurant_order_ll_order_type_margin_bottom"
            android:layout_marginTop="@dimen/restaurant_order_ll_order_type_margin_top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/recyclerview_restaurant_order_tv_order_type_tag_text"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/restaurant_order_tv_order_type_tag_text_size"
                fontPath="@string/font_serif"
                android:typeface="serif" />

            <TextView
                android:id="@+id/recyclerview_restaurant_order_tv_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/restaurant_order_tv_order_type_text_size"
                fontPath="@string/font_serif"
                android:typeface="serif" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recyclerview_restaurant_order_tv_discount"
            style="@style/TextView1"
            android:layout_width="@dimen/restaurant_order_tv_discount_height_width"
            android:layout_height="@dimen/restaurant_order_tv_discount_height_width"
            android:background="@drawable/circular_image_view_orange"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/restaurant_order_tv_discount_text_size" />

        <TextView
            android:id="@+id/recyclerview_restaurant_order_tv_price"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/restaurant_order_tv_price_margin_top"
            android:textDirection="ltr"
            android:textColor="@color/black"
            android:textSize="@dimen/restaurant_order_tv_price_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/restaurant_order_iv_accept_reject_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recyclerview_restaurant_order_iv_accept_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/restaurant_order_iv_accept_order_margin_end"
                android:src="@mipmap/ic_green_tick" />

            <ImageView
                android:id="@+id/recyclerview_restaurant_order_iv_reject_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_delete" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>