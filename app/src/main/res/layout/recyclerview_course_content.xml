<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerview_course_content_ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="MissingPrefix">
    <!--android:layout_marginBottom="@dimen/course_content_ll_main_margin_top_bottom"-->
    <!--android:layout_marginTop="@dimen/course_content_ll_main_margin_top_bottom"-->

    <RelativeLayout
        android:id="@+id/recyclerview_course_content_rl_course_quantity"
        android:layout_width="@dimen/course_content_rl_course_quantity_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recyclerview_course_content_tv_course_quantity"
            style="@style/TextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/course_content_tv_course_quantity_text_size" />

        <TextView
            style="@style/TextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/recyclerview_course_content_tv_course_quantity"
            android:text="@string/recyclerview_course_content_tv_x_text"
            android:textColor="@color/orange"
            android:textSize="@dimen/course_content_tv_x_text_size" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recyclerview_course_content_civ_dish_image"
        android:layout_width="@dimen/add_discount_bt_height"
        android:layout_height="@dimen/add_discount_bt_height"
        android:layout_marginStart="@dimen/course_content_ll_main_course_margin"
        android:layout_gravity="center"
        android:src="@mipmap/img_placeholder" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/course_content_ll_main_course_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recyclerview_course_content_tv_veg"
                android:layout_width="@dimen/course_content_tv_veg_height_width"
                android:layout_height="@dimen/course_content_tv_veg_height_width"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/course_content_tv_veg_margin_end" />

            <TextView
                android:id="@+id/recyclerview_course_content_tv_course_name"
                style="@style/TextView4"
                fontPath="@string/font_monospace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdafasd fsda "
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/recyclerview_course_content_tv_course_name_text_size"
                android:typeface="monospace" />

        </LinearLayout>

        <TextView
            android:id="@+id/recyclerview_course_content_tv_course_description"
            style="@style/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="adsf sdaf sd sd "
            android:textColor="@color/grey"
            android:textSize="@dimen/course_content_tv_course_des_text_size" />
        <!--android:layout_marginTop="@dimen/course_content_tv_course_des_margin_top"-->

    </LinearLayout>

    <TextView
        android:id="@+id/recyclerview_course_content_tv_price"
        style="@style/TextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/course_content_tv_price_margin"
        android:textColor="@color/orange" />

</LinearLayout>