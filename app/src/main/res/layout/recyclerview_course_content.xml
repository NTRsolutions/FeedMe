<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recyclerview_course_content_ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--android:layout_marginBottom="@dimen/course_content_ll_main_margin_top_bottom"-->
    <!--android:layout_marginTop="@dimen/course_content_ll_main_margin_top_bottom"-->

    <RelativeLayout
        android:id="@+id/recyclerview_course_content_rl_course_quantity"
        android:layout_width="@dimen/course_content_rl_course_quantity_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recyclerview_course_content_tv_course_quantity"
            style="@style/TextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/course_content_tv_course_quantity_text_size"
            android:text="20"
            android:textColor="@color/orange" />

        <TextView
            style="@style/TextView5"
            android:layout_toEndOf="@+id/recyclerview_course_content_tv_course_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/course_content_tv_x_text_size"
            android:text="@string/recyclerview_course_content_tv_x_text"
            android:textColor="@color/orange" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/course_content_ll_main_course_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recyclerview_course_content_tv_course_name"
            style="@style/TextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/recyclerview_course_content_tv_course_name_text_size"
            android:text="Pizza"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/recyclerview_course_content_tv_course_description"
            style="@style/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="Pizza pizze"
            android:textSize="@dimen/course_content_tv_course_des_text_size"
            android:textColor="@color/grey" />
        <!--android:layout_marginTop="@dimen/course_content_tv_course_des_margin_top"-->

    </LinearLayout>

    <TextView
        android:id="@+id/recyclerview_course_content_tv_price"
        style="@style/TextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/course_content_tv_price_margin"
        android:text="$55"
        android:textColor="@color/orange" />

</LinearLayout>