<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/manage_payment_card_ll_recyclerview_padding">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_payment_method_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/activity_payment_method_tv_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/manage_payment_card_tv_alert_text"
            style="@style/TextView1"
            android:textColor="@color/black"
            android:visibility="gone" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_payment_method_fab_add_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/cuisine_type_fab_add_margin"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/green"
        app:layout_behavior="com.os.foodie.ui.custom.FABScrollingBehavior"
        app:rippleColor="@color/light_green" />

</FrameLayout>