<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.os.foodie.ui.setting.changepassword.ChangePasswordActivity">

    <EditText
        android:id="@+id/activity_change_password_et_current_password"
        style="@style/EditTextGreySingleLine"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:hint="Current Password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />

    <EditText
        android:id="@+id/activity_change_password_et_new_password"
        style="@style/EditTextGreySingleLine"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:hint="New Password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />

    <EditText
        android:id="@+id/activity_change_password_et_confirm_new_password"
        style="@style/EditTextGreySingleLine"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:hint="Confirm New Password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />

    <com.os.foodie.ui.custom.RippleAppCompatButton
        android:id="@+id/activity_change_password_bt_change_password"
        style="@style/ButtonOrange"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Change Password" />

</LinearLayout>