<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical"
    tools:context="com.os.foodie.ui.mybasketlist.MyBasketListActivity">

    <TextView
        android:id="@+id/activity_my_basket_list_tv_empty_basket"
        style="@style/TextView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/my_basket_list_tv_empty_basket_text"
        android:textColor="@color/black" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_my_basket_list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>