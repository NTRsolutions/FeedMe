<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_item_quantity_tv_item_name"
        style="@style/TextView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_item_quantity_tv_item_name_margin_top"
        android:gravity="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_item_quantity_ll_quantity_margin_top"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_item_quantity_iv_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_orange_24dp" />

        <TextView
            android:id="@+id/dialog_item_quantity_tv_item_quantity"
            style="@style/TextView3"
            android:layout_width="@dimen/dialog_item_quantity_tv_item_quantity_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dialog_item_quantity_tv_item_quantity_margin_start_end"
            android:layout_marginStart="@dimen/dialog_item_quantity_tv_item_quantity_margin_start_end"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dialog_item_quantity_iv_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_orange_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dialog_item_quantity_ll_price_margin_top"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dialog_item_quantity_tv_price_tag_text"
            android:textSize="@dimen/dialog_item_quantity_tv_price_tag_text_size" />

        <TextView
            android:id="@+id/dialog_item_quantity_tv_price_currency"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/dialog_item_quantity_tv_price_tag_text_size" />

        <TextView
            android:id="@+id/dialog_item_quantity_tv_price"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/dialog_item_quantity_tv_price_text_size" />

    </LinearLayout>

    <com.os.foodie.ui.custom.RippleAppCompatButton
        android:id="@+id/dialog_item_quantity_bt_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_item_quantity_bt_update_margin_top"
        android:background="@drawable/rectangle_white_top_outline_light_grey"
        android:gravity="center"
        android:padding="@dimen/dialog_item_quantity_bt_update_padding"
        android:text="@string/dialog_item_quantity_bt_update_text"
        fontPath="@string/font_serif"
        android:textAllCaps="false"
        android:textColor="@color/orange"
        android:textSize="@dimen/dialog_item_quantity_bt_update_text_size"
        android:typeface="serif" />

</LinearLayout>