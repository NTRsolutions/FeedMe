<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_item_quantity_tv_item_name"
        style="@style/TextView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Crispy Calamari"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_item_quantity_iv_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_orange_24dp" />

        <TextView
            android:id="@+id/dialog_item_quantity_tv_item_quantity"
            style="@style/TextView3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="1000"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dialog_item_quantity_iv_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_orange_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Price: $"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_item_quantity_tv_price"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="16sp" />

    </LinearLayout>

    <com.os.foodie.ui.custom.RippleAppCompatButton
        android:id="@+id/dialog_item_quantity_bt_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_white_top_outline_light_grey"
        android:gravity="center"
        android:padding="15dp"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:typeface="serif" />

</LinearLayout>