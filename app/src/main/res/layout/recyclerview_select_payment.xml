<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/select_payment_ll_main_padding">

    <RadioButton
        android:id="@+id/recyclerview_select_payment_rb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/recyclerview_select_payment_tv_card_number"
        style="@style/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/select_payment_tv_card_number_margin_start"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/select_payment_tv_card_number_text_size" />

</LinearLayout>