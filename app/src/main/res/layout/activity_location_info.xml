        <EditText
            android:id="@+id/activity_location_info_et_country"
            style="@style/EditTextGreySingleLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/location_info_et_height"
            android:layout_marginTop="@dimen/location_info_et_country_margin_top"
            android:clickable="true"
            android:enabled="false"
            android:hint="@string/location_info_et_country_hint"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingEnd="@dimen/location_info_et_padding_end"
            android:paddingStart="@dimen/location_info_et_padding_start" />

        <EditText
            android:id="@+id/activity_location_info_et_city"
