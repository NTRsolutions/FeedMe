            android:inputType="text"
            android:paddingEnd="@dimen/location_info_et_padding_end"
            android:paddingStart="@dimen/location_info_et_padding_start" />

        <EditText
            android:id="@+id/activity_location_info_et_current_location"
            style="@style/EditTextGreySingleLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/location_info_et_height"
            android:layout_marginTop="@dimen/location_info_et_margin_top"
            android:clickable="true"
            android:drawableEnd="@mipmap/ic_gps"
            android:drawablePadding="5dp"
            android:focusable="false"
            android:hint="@string/location_info_et_current_location_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:longClickable="false"
            android:paddingEnd="@dimen/location_info_et_padding_end"
            android:paddingStart="@dimen/location_info_et_padding_start" />

        <com.os.foodie.ui.custom.RippleAppCompatButton
            android:id="@+id/activity_location_info_bt_submit"
            style="@style/ButtonOrange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/location_info_bt_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/location_info_bt_margin_top"
            android:gravity="center"
