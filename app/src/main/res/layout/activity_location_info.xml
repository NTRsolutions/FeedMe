<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.os.foodie.ui.locationinfo.LocationInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/activity_location_info_iv_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/img_banner" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/activity_location_info_iv_banner"
            android:layout_marginEnd="@dimen/location_info_margin_end"
            android:layout_marginStart="@dimen/location_info_margin_start"
            android:background="@color/white_transparent_2"
            android:padding="@dimen/location_info_padding"
            android:src="@mipmap/ic_logo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/location_info_margin_end"
        android:layout_marginStart="@dimen/location_info_margin_start"
        android:background="@color/white_transparent_2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
