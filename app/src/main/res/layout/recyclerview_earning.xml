<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/recyclerview_earning_ll_main_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recyclerview_earning_tv_earning_id"
            style="@style/TextView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/recyclerview_earning_ll_margin_top_bottom"
            android:layout_marginTop="@dimen/recyclerview_earning_ll_margin_top_bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/recyclerview_earning_tv_tag_margin_end"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/recyclerview_earning_tv_transaction_id_tag_text"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/recyclerview_earning_tv_text_size"
                android:typeface="serif" />

            <TextView
                android:id="@+id/recyclerview_earning_tv_transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/recyclerview_earning_tv_text_size"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/recyclerview_earning_ll_margin_top_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/recyclerview_earning_tv_tag_margin_end"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/recyclerview_earning_tv_date_tag_text"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/recyclerview_earning_tv_text_size"
                android:typeface="serif" />

            <TextView
                android:id="@+id/recyclerview_earning_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/recyclerview_earning_tv_text_size"
                android:typeface="serif" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/recyclerview_earning_tv_amount"
        style="@style/TextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange" />

</LinearLayout>