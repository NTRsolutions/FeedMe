<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.os.foodie.ui.slide.SlideFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--android:layout_width="@dimen/slide_icon_height_width"-->
        <!--android:layout_height="@dimen/slide_icon_height_width"-->
        <!--android:layout_marginTop="@dimen/slide_icon_margin_top"-->

        <ImageView
            android:id="@+id/fragment_slide_iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_slide_one" />

        <TextView
            android:id="@+id/fragment_slide_tv_title"
            style="@style/TextView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/slide_text_margin_end"
            android:layout_marginStart="@dimen/slide_text_margin_start"
            android:gravity="center_horizontal" />

        <!--android:layout_marginTop="@dimen/slide_title_margin_top"-->

        <TextView
            android:id="@+id/fragment_slide_tv_subtitle"
            style="@style/TextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/slide_text_margin_end"
            android:layout_marginStart="@dimen/slide_text_margin_start"
            android:layout_marginTop="@dimen/slide_subtitle_margin_top"
            android:gravity="center_horizontal"
            android:lines="3" />
    </LinearLayout>
</ScrollView>