<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/popup_restaurant_menu_ll_main_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/popup_restaurant_menu_ll_margin_end"
        android:layout_marginStart="@dimen/popup_restaurant_menu_ll_margin_start"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_popup_restaurant_menu_item_iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_popup_item_selector"
            android:padding="@dimen/popup_restaurant_menu_iv_status_padding"
            android:src="@mipmap/ic_green_tick" />
        <!--android:tint="@drawable/menu_popup_status_color_selector"-->

        <ImageView
            android:id="@+id/menu_popup_restaurant_menu_item_iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_popup_item_selector"
            android:padding="@dimen/popup_restaurant_menu_iv_edit_padding"
            android:src="@mipmap/ic_edit" />

        <ImageView
            android:id="@+id/menu_popup_restaurant_menu_item_iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_popup_item_selector"
            android:padding="@dimen/popup_restaurant_menu_iv_delete_padding"
            android:src="@mipmap/ic_delete" />

    </LinearLayout>

</LinearLayout>