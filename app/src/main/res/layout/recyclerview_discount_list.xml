<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/discount_list_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discount_tv"
                style="@style/TextView3B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25%" />

            <TextView
                style="@style/TextView3B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/discount_on" />

        </LinearLayout>

        <TextView
            android:id="@+id/products_names_tv"
            style="@style/TextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/restaurant_order_tv_item_name_margin_top"
            android:text="Pizza,Ice-cream,Grill Sendwich"
            android:textColor="@color/dark_grey2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/valid_on"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/restaurant_order_tv_delivery_type_tag_text_size"
                android:typeface="serif" />

            <TextView
                android:id="@+id/dis_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/restaurant_order_delivery_type_text_size"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/min_amount_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/restaurant_order_ll_order_type_margin_top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/minimum_amount"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/restaurant_order_tv_order_type_tag_text_size"
                android:typeface="serif" />

            <TextView
                android:id="@+id/dis_min_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/restaurant_order_tv_order_type_text_size"
                android:typeface="serif" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/recyclerview_restaurant_discount_iv_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/restaurant_menu_iv_overflow_padding_bottom"
        android:paddingTop="@dimen/restaurant_menu_iv_overflow_padding_top"
        android:src="@mipmap/ic_overflow" />

</LinearLayout>