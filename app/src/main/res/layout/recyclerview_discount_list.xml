<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/discount_list_ll_main_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recyclerview_discount_list_tv_discount"
                style="@style/TextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/TextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/discount_list_tv_discount_tag_margin_start"
                android:text="@string/discount_list_tv_discount_on_tag_text" />

        </LinearLayout>

        <TextView
            android:id="@+id/recyclerview_discount_list_tv_products_names"
            style="@style/TextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/discount_list_ll_margin_top"
            android:text="Pizza,Ice-cream,Grill Sendwich"
            android:textColor="@color/dark_grey2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/discount_list_ll_margin_top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/discount_list_tv_margin_top"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/discount_list_tv_valid_on_tag_text"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/discount_list_tv_text_size"
                android:typeface="serif" />

            <TextView
                android:id="@+id/recyclerview_discount_list_tv_discount_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/discount_list_tv_text_size"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/min_amount_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/discount_list_ll_margin_top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/discount_list_tv_margin_top"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/discount_list_tv_minimum_order_amount_tag_text"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/discount_list_tv_text_size"
                android:typeface="serif" />

            <TextView
                android:id="@+id/recyclerview_discount_list_tv_discount_min_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/discount_list_tv_text_size"
                android:typeface="serif" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/recyclerview_discount_list_iv_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/discount_list_iv_overflow_padding_bottom"
        android:paddingTop="@dimen/discount_list_iv_overflow_padding_top"
        android:src="@mipmap/ic_overflow" />

</LinearLayout>